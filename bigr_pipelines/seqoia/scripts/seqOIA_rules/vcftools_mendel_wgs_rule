rule vcftools_mendel_wgs:
	input:
		vcf = "{basedir}/{analysis}/chr_{index}/{analysis}_chr_{index}_snpsift_phastcons.vcf",
		ped = "{basedir}/{analysis}/family.ped"
	output:
		"{basedir}/{analysis}/chr_{index}/{analysis}_chr_{index}_vcftools.mendel"
	resources: io=16
	log:
		"{basedir}/{analysis}/log/chr_{index}/{analysis}_chr_{index}_vcftools_mendel.log"
	params:
		vcftools_mendel_options = config["vcftools_mendel_wgs"]["OPTIONS"],
	shell:
		'vcftools {params.vcftools_mendel_options} --chr {wildcards.index} --mendel {input.ped} --vcf {input.vcf} --out {wildcards.basedir}/{wildcards.analysis}/chr_{wildcards.index}/{wildcards.analysis}_chr_{wildcards.index}_vcftools 2>&1 | tee -a {log}'
