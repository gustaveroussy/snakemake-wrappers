rule QC_sample_name_trio:
	input:
		qc = expand("{basedir}/{analysis}/{analysis}_qc.csv", basedir=basedir, analysis=analysis),
		sample_sheet = expand("{input_dir}/sample_sheet/{run}.csv",  run=run, input_dir=input_dir),
		script_python = expand("{script_dir}/laboratory_annotations.py", script_dir=script_dir)
	output:
		qc = "{basedir}/{analysis}/{analysis}_qc_lab_temp.csv"
	log:
		"{basedir}/{analysis}/log/{analysis}_qc_lab_temp.log"
	params:
		config_file = config["general_informations"]["PIPELINE_CONFIG"]
	shell:
		"python3 {input.script_python} -q {input.qc} -s {input.sample_sheet} -c {params.config_file} -o {output} 2>&1 | tee -a {log}"

