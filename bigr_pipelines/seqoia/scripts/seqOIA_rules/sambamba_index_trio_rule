rule sambamba_index_trio:
	input:
		bam = "{basedir}/{analysis}/{prefix}/{prefix}_wisecondor_merged.bam",
	output:
		bai = "{basedir}/{analysis}/{prefix}/{prefix}_wisecondor_merged.bam.bai"
	log:
		"{basedir}/{analysis}/log/{prefix}/{prefix}_sambamba_index_wisecondor.log"
	params:
		sambamba_index_options = config["sambamba_index_genome"]["OPTIONS"]
	shell:
		"sambamba index {params.sambamba_index_options} {input.bam} 2>&1 | tee -a {log}"
