rule export_irods_demux:
	input:
		"{export_dir}/{sequenceur}/{run}/ped_genomiser_generation.done"
	output:
		done = "{export_dir}/{sequenceur}/{run}/export_config.done",
		folder =  "{export_dir}/{sequenceur}/{run}/"
	params:
		pipeline_config = config["general_informations"]["PIPELINE CONFIG"]
	log:
		"{export_dir}/{sequenceur}/{run}/log/export_irods_demux.log"
	shell:
		"rsync -Paz {params.pipeline_config} {output.folder} && touch {output.done} 2>&1 | tee -a {log}"
