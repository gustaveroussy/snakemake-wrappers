rule picard_collect_alignment_summary_metrics_wgs:
	input:
		bam = "{basedir}/{analysis}/{prefix}/chr_{index}/{prefix}_chr_{index}_markdup.temp.bam",
		bai = "{basedir}/{analysis}/{prefix}/chr_{index}/{prefix}_chr_{index}_markdup.temp.bam.bai"
	output:
		"{basedir}/{analysis}/{prefix}/chr_{index}/{prefix}_chr_{index}_collect_summary_metrics.txt"
	resources: io=10
	log:
		"{basedir}/{analysis}/log/{prefix}/chr_{index}/{prefix}_chr_{index}_collect_summary_metrics.log"
	params:
		picard_collect_summary_metrics_options = config["picard_collect_summary_metrics"]["OPTIONS"],
		reference = config["general_informations"]["FASTA_FILE"]
	shell:
		"java -Xmx5000m -Xms5000m -XX:ParallelGCThreads=2 -XX:+AggressiveHeap -jar /usr/share/java/GenomeAnalysisTK.jar CollectAlignmentSummaryMetrics {params.picard_collect_summary_metrics_options} -I {input.bam} -O {output} -R {params.reference} 2>&1 | tee -a {log}"

