rule vt_decompose_trio_wgs:
	input:
		"{basedir}/{analysis}/chr_{index}/{analysis}_chr_{index}_genotype.vcf"
	output:
		temp("{basedir}/{analysis}/chr_{index}/{analysis}_chr_{index}_VTD.vcf")
	log:
		"{basedir}/{analysis}/log/chr_{index}/{analysis}_chr_{index}_decompose.log"
	params:
		vt_decompose_options=config["vt_decompose"]["OPTIONS"]
	shell:
		"docker_wrapper -c 'vt decompose {params.vt_decompose_options} {input} -o {output}' 2>&1 | tee -a {log}"
