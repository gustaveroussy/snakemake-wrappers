rule QC_sample_name_cancer:
	input:
		qc = "{basedir}/{analysis}/{analysis}_qc.csv",
		sample_sheet = expand("{input_dir}/sample_sheet/{run}.csv",  run=run, input_dir=input_dir),
		script_python = lambda wildcards: expand("{script_dir}/laboratory_annotations.py", script_dir=script_dir)
	output:
		qc = "{basedir}/{analysis}/{analysis}_qc_lab_temp.csv"
	log:
		"{basedir}/{analysis}/log/{analysis}_qc_lab.log"
	params:
		config_file = config["general_informations"]["PIPELINE_CONFIG"]
	shell:
		"python3 {input.script_python} -c {params.config_file} -q {input.qc} -s {input.sample_sheet} -o {output} 2>&1 | tee -a {log}"

