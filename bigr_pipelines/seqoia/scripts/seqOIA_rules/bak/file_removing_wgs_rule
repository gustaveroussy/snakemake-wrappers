rule file_removing_wgs:
	input:
		qc = lambda wildcards: expand("{basedir}/{analysis}/{prefix}/{prefix}_qc_stat.csv", analysis=wildcards.analysis, prefix=prefix),
		vcf = lambda wildcards: expand("{basedir}/{analysis}/{prefix}/{prefix}_final.vcf", analysis=wildcards.analysis, prefix=prefix),
		#identito = "{basedir}/{analysis}/{analysis}_identito_temp.csv"
	output:
		temp("{basedir}/{analysis}/file_removing/{sample}_file_removing.done")
	resources: io=300
	log:
		"{basedir}/{analysis}/log/{sample}/{sample}_file_removing.log"
	shell:
		"rm -r {wildcards.basedir}/{wildcards.analysis}/{wildcards.sample}"
