rule bcftools_view:
	input:
		"{basedir}/{analysis}/{analysis}_final_temp.vcf"
	output:
		"{basedir}/{analysis}/mendelian/{analysis}_bcftools_mendelian_missing_geno.vcf",
	log:
		"{basedir}/{analysis}/log/mendelien/{analysis}_bcftools_view.log"
	params:
		bcftools_options = config["bcftools_view"]["OPTIONS"]
	shell:
		"set -o pipefail; bcftools view {params.bcftools_options} {input} -o {output} 2>&1 | tee -a {log}"
