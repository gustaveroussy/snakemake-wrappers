rule vt_decompose_cancer_tmb:
	input:
		"{basedir}/{analysis}/{prefix}/{prefix}_concat.vcf"
	output:
		temp("{basedir}/{analysis}/{prefix}/{prefix}_concat_VTD.vcf")
	log:
		"{basedir}/{analysis}/log/{prefix}_concat_VTD.vcf.log"
	params:
		vt_decompose_options=config["vt_decompose"]["OPTIONS"]
	shell:
		"docker_wrapper -c 'vt decompose {params.vt_decompose_options} {input} -o {output}' 2>&1 | tee -a {log}"
