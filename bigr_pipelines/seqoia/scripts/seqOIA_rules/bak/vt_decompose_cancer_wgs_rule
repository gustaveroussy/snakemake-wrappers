rule vt_decompose_cancer_wgs:
	input:
		"{basedir}/{analysis}/{prefix}/chr_{index}/{prefix}_chr_{index}.vcf"
	output:
		temp("{basedir}/{analysis}/{prefix}/chr_{index}/{prefix}_chr_{index}_VTD.vcf")
	log:
		"{basedir}/{analysis}/log/{prefix}/chr_{index}/{prefix}_chr_{index}_VTD.log"
	params:
		vt_decompose_options=config["vt_decompose"]["OPTIONS"]
	shell:
		"docker_wrapper -c 'vt decompose {params.vt_decompose_options} {input} -o {output}' 2>&1 | tee -a {log}"
